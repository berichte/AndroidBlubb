<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.blubb.alubb.blubbbasics.BlubbLoginActivity"
    android:weightSum="1">

    <ImageView
        android:layout_width="225dp"
        android:layout_height="221dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/blubb_logo_big" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33" />

    <EditText
        android:id="@+id/blubb_login_username"
        android:text="@string/prompt_username"
        android:hint="@string/login_username_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom" />

    <EditText
        android:id="@+id/blubb_login_password"
        android:text="@string/prompt_password"
        android:hint="@string/login_password_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:password="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal|bottom" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_sign_in_short"
        android:textColor="@android:color/white"
        android:id="@+id/blubb_login_button"
        android:layout_alignParentTop="true"
        android:background="@drawable/blubb_button"
        android:layout_gravity="center_horizontal|bottom" />

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_stay_logged_in"
        android:checked="true"
        android:id="@+id/login_stay_logged_cb"
        android:layout_gravity="center_horizontal|bottom" />

</LinearLayout>
