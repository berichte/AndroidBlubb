<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    android:alpha="0.5"-->
    <Space
        android:layout_width="30dp"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/blubb_popup_menu_back"
        android:orientation="horizontal"
        android:padding="@dimen/message_padding"
        android:paddingRight="@dimen/message_padding_right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/message_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="U"
                android:textSize="50dp" />

            <TextView
                android:id="@+id/message_role_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mRole"
                android:textColor="@color/blubb_cards_text"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:paddingLeft="@dimen/message_padding_left">

                <TextView
                    android:id="@+id/message_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:singleLine="false"
                    android:text="mTitle"
                    android:textAppearance="@android:style/TextAppearance.Large"
                    android:textColor="@color/blubb_cards_text" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/message_creator_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_weight="1"
                        android:text="mCreator"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textColor="@color/blubb_cards_text" />

                    <TextView
                        android:id="@+id/message_date_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="1"
                        android:paddingBottom="7dp"
                        android:text="mDate"
                        android:textColor="@color/blubb_cards_text" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/message_content_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/message_content_back"
                android:padding="8dp"
                android:text="mContent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blubb_cards_content_text" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>