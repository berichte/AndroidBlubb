<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/thread_back_large"
    android:orientation="horizontal"
    android:paddingLeft="20dp"
    android:paddingTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingRight="20dp">

        <include
            layout="@layout/thread_list_entry_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/blubb_symbol_size">


            <TextView
                android:id="@+id/thread_list_item_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:text="thread info"
                android:textColor="@color/blubb_cards_text"
                android:textSize="@dimen/blubb_text_size_small" />

            <TextView
                android:id="@+id/thread_list_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_content_back"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text="Thread\ndescription\non three lines"
                android:textColor="@color/blubb_cards_content_text"
                android:textSize="@dimen/blubb_text_size_small" />
        </LinearLayout>

        <Button
            android:id="@+id/thread_edit_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/message_padding"
            android:layout_marginTop="@dimen/message_padding"
            android:background="@drawable/blubb_button_small"
            android:text="E"
            android:textColor="@color/beap_blue" />
    </LinearLayout>
</LinearLayout>