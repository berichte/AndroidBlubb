<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_back"
    android:orientation="vertical">

    <TextView
        android:id="@+id/thread_new_dialog_head_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/create_new_thread_dialog_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/beap_dark_blue"
        android:textSize="@dimen/blubb_text_size_large"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/thread_new_title_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/thread_new_title_hint"
        android:textColor="@color/beap_dark_blue"
        android:textColorHint="@color/beap_blue" />

    <EditText
        android:id="@+id/thread_new_descr_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:hint="@string/thread_new_descr_hint"
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="3"
        android:textColor="@color/beap_dark_blue"
        android:textColorHint="@color/beap_blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/x_button_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:background="@drawable/blubb_x_button"
            android:text="@string/thread_new_cancel_button_text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_weight="6" />

        <Button
            android:id="@+id/y_button_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:background="@drawable/blubb_y_button"
            android:text="@string/message_new_send_button_text" />
    </LinearLayout>

</LinearLayout>