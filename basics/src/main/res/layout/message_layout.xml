<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_back_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blubb_message"
    android:orientation="horizontal"
    android:padding="@dimen/message_padding"
    android:paddingRight="@dimen/message_padding_right">
    <!--    android:alpha="0.5"-->


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/message_profile_pic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="U"
            android:textSize="@dimen/blubb_symbol_size" />

        <TextView
            android:id="@+id/message_role_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mRole"
            android:textColor="@color/blubb_cards_text"
            android:visibility="invisible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/message_right_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:orientation="vertical"
        android:paddingLeft="@dimen/message_padding_left">

        <TextView
            android:id="@+id/message_creator_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="mCreator"
            android:textColor="@color/blubb_cards_text"
            android:textSize="@dimen/blubb_text_size_medium" />

        <TextView
            android:id="@+id/message_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingBottom="7dp"
            android:text="mDate"
            android:textColor="@color/beap_blue"
            android:textSize="@dimen/blubb_text_size_small" />

        <TextView
            android:id="@+id/message_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:singleLine="false"
            android:text="mTitle"
            android:textColor="@color/blubb_cards_text"
            android:textSize="@dimen/blubb_text_size_large" />


        <View
            android:id="@+id/message_content_v"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/message_content_back"
            android:padding="@dimen/message_padding" />

        <Button
            android:id="@+id/message_reply_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/message_padding"
            android:layout_marginTop="@dimen/message_padding"
            android:background="@drawable/blubb_button_small"
            android:text="O"
            android:textColor="@color/beap_blue" />
    </LinearLayout>
</LinearLayout>