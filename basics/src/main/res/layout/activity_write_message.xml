<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.blubb.alubb.blubbbasics.WriteMessageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Thread title"
        android:id="@+id/write_new_message_thread_name_tv"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/write_new_message_title_editText"
        android:layout_below="@+id/write_new_message_thread_name_tv"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:hint="here goes the title" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/write_new_message_content_editText"
        android:layout_below="@+id/write_new_message_title_editText"
        android:layout_centerHorizontal="true"
        android:hint="and here goes what you have to say"
        android:gravity="top" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:text="@string/single_thread_new_message_send_button_text"
        android:id="@+id/write_new_message_send_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>
