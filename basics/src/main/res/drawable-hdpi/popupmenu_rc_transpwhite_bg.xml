<?xml version="1.0" encoding="utf-8"?><!-- slightly transparent background for the menu dropdown.
        (ignore the preview, different rounded corners make some problems)
  Created by Benjamin Richter -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingBottom="@dimen/cards_separation_space">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/cards_shadow" />
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>

    <item
        android:bottom="3dp"
        android:left="1dp"
        android:right="2dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/popup_menu_bg" />
            <corners
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"
                android:topLeftRadius="30dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>

</layer-list>