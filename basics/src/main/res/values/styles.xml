<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/myActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/blubbActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/actionbar_text</item>
        <item name="android:button">@style/blubbButton</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar"></style>

    <!-- ActionBar styles -->
    <style name="myActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/actionbar_background</item>
    </style>

    <style name="MyActionBarTitleText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <!-- ActionBar tabs text styles -->
    <style name="blubbActionBarTabText">
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

    <style name="blubbButton">
        <item name="android:background">@drawable/blubb_button</item>
        <item name="android:textColor">@color/actionbar_text</item>
    </style>

</resources>
