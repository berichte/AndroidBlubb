<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.blubb.alubb" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/alubb"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.blubb.alubb.beapcom.BlubbComTest"
            android:label="@string/title_activity_blubb_com_test" >
        </activity>
        <activity
            android:name="com.blubb.alubb.blubbbasics.Blubb_login"
            android:label="@string/title_activity_blubb_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.blubb.alubb.blubbbasics.ThreadOverview"
            android:label="@string/title_activity_thread_overview" >
        </activity>
        <activity
            android:name="com.blubb.alubb.blubbbasics.SingleThreadActivity"
            android:label="@string/title_activity_single_thread" >
        </activity>
        <activity
            android:name="com.blubb.alubb.blubbbasics.WriteMessageActivity"
            android:label="@string/title_activity_write_message" >
        </activity>
        <activity
            android:name="com.blubb.alubb.blubbbasics.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.blubb.alubb.blubbbasics.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>

        <service
            android:name="com.blubb.alubb.beapcom.MessagePullService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/alubb"
            android:label="@string/service_message_pull_name">
        </service>
    </application>
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
