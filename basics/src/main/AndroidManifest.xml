<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.blubb.alubb">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".blubbbasics.BlubbApplication"
        android:allowBackup="true"
        android:icon="@drawable/blubb_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".blubbbasics.ActivityLogin"
            android:label="@string/title_activity_blubb_login"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".blubbbasics.ActivityThreadOverview"
            android:label="@string/title_activity_thread_overview"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".blubbbasics.ActivitySingleThread"
            android:label="@string/title_activity_single_thread"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".blubbbasics.ActivitySettings"
            android:label="@string/title_activity_settings" />

        <service
            android:name=".blubbbasics.MessagePullService"
            android:enabled="true"
            android:exported="true"
            android:icon="@drawable/blubb_logo"
            android:label="@string/service_message_pull_name"
            tools:ignore="ExportedService" />

    </application>

</manifest>
